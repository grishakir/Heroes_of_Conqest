<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/fon_trans"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="10dp">

    <com.thekingames.ui.FanTextView
        android:id="@+id/item_name"
        style="@style/medieval_text"
        android:layout_gravity="center_horizontal"
        android:text="@string/scrolls_name" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/item_view_container"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="top"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp" />

            <ImageButton
                android:id="@+id/icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/fon_icon1"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_hunter" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="100">


            <LinearLayout
                android:id="@+id/item_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">

                <com.thekingames.ui.FanTextView
                    style="@style/medieval_text_description"
                    android:text="@string/r_lvl" />

                <com.thekingames.ui.FanTextView
                    style="@style/medieval_text_description"
                    android:text="@string/item_quality" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal">


                    <com.thekingames.ui.FanButton
                        android:id="@+id/buy"
                        style="@style/medieval_button"
                        android:layout_gravity="center" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/coin" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/stats_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>