<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/w_card"
    android:layout_height="@dimen/h_card"
    android:layout_gravity="center"
    android:background="@drawable/fon_dialog"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <com.thekingames.ui.FanTextView
        android:id="@+id/name"
        style="@style/medieval_text"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/berserk"
        android:textColor="#742300" />

    <ImageView
        android:id="@+id/image_hero"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/preview_berserk"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp"
        android:weightSum="33">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:padding="3dp"
            android:src="@drawable/icon_hp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:src="@drawable/icon_sword" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:src="@drawable/icon_def" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hero_stats"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp"
        android:weightSum="33">
        <com.thekingames.ui.FanTextView
            android:id="@+id/hp"
            style="@style/medieval_text_hero_card"
            android:text="1500"
            android:layout_weight="11"
            android:layout_width="0dp"
            android:textColor="#742300" />
        <com.thekingames.ui.FanTextView
            android:id="@+id/dmg"
            style="@style/medieval_text_hero_card"
            android:text="24"
            android:layout_weight="11"
            android:layout_width="0dp"
            android:textColor="#742300" />
        <com.thekingames.ui.FanTextView
            android:id="@+id/def"
            style="@style/medieval_text_hero_card"
            android:text="15%"
            android:layout_weight="11"
            android:layout_width="0dp"
            android:textColor="#742300" />
    </LinearLayout>
</LinearLayout>