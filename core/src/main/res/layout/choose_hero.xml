<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon_texture"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingTop="0dp">

    <com.thekingames.ui.FanTextView
        android:id="@+id/text_header"
        style="@style/medieval_text_header"
        android:layout_gravity="center_horizontal" />


    <LinearLayout
        android:id="@+id/hero_and_talents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/hero_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="60"
            android:gravity="bottom"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/unit_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/fon_white_trans"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="5dp">

                <ImageButton
                    android:id="@+id/icon_warrior"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/fon_icon1"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_warrior" />

                <ImageButton
                    android:id="@+id/icon_hunter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/fon_icon1"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_hunter" />

                <ImageButton
                    android:id="@+id/icon_mage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/fon_icon1"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_mage" />

                <ImageButton
                    android:id="@+id/icon_rogue"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/fon_icon1"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_rogue" />

                <ImageButton
                    android:id="@+id/icon_paladin"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/fon_icon1"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_paladin" />

                <ImageButton
                    android:id="@+id/icon_berserk"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/fon_icon1"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_berserk" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/talents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:background="@drawable/fon_white_trans"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" />

            <com.thekingames.ui.FanButton
                android:id="@+id/next"
                style="@style/medieval_button"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/choose" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>