<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/medieval_scroll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fon_texture"
        android:orientation="vertical">

        <com.thekingames.ui.FanTextView
            style="@style/medieval_text"
            android:layout_gravity="center_horizontal"
            android:text="@string/history" />

        <com.thekingames.ui.FanTextView
            style="@style/medieval_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/lore_description" />

        <com.thekingames.ui.FanTextView
            android:id="@+id/e1"
            style="@style/medieval_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="20dp"
            android:text="@string/e_1"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/fon_page"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">


            <com.thekingames.ui.FanButton
                style="@style/medieval_button"
                android:text="@string/name_chapter0" />

            <com.thekingames.ui.FanButton
                style="@style/medieval_button"
                android:layout_marginTop="10dp"
                android:text="@string/name_chapter1" />

            <com.thekingames.ui.FanButton
                style="@style/medieval_button"
                android:layout_marginTop="10dp"
                android:text="@string/name_chapter2" />

            <com.thekingames.ui.FanButton
                style="@style/medieval_button"
                android:layout_marginTop="10dp"
                android:text="@string/name_chapter3" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>