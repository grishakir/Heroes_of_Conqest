<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="app_theme" parent="@style/Theme.AppCompat">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="medieval_scroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/fon_frame</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:requiresFadingEdge">none</item>
        <item name="android:scrollbars">none</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="medieval_button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="medieval_text_header">
        <item name="android:background">@drawable/ribbon</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:layout_width">360dp</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="medieval_text">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="medieval_text_description">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="medieval_text_hero_card">
        <item name="android:layout_height">23dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

</resources>